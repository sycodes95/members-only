doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    
    link(rel='stylesheet', href='/stylesheets/style.css')
    
  body
    
    div(class='container')
      
      div(class='headerCon')
        block header 
          
          div(class='logoCon')
            a(href="/") 
              span Da Club
          div(class='userCon')
            a(href="/login")
              span Log In
            a(href="/signup")
              span Sign Up
            if(user)
              a(href="/members")
                span Members Only

      div(class='contentCon')
        block content
